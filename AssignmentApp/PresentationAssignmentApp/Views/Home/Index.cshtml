@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-5">
    <div class="text-center mt-5">
        <h1 class="display-2">Welcome</h1>

        @if (User.IsInRole("Student"))
        {
            <h3 class="display-4">Press on the assignments tab to view your submissions and pending assignments.</h3>
        }
        else if (User.IsInRole("Teacher"))
        {
            <h3 class="display-4">Press on the assignments tab to view assignments and submissions.</h3>
        }
        else
        {
            <h3 class="display-4">Please login to access the website and it's features.</h3>
        }

    </div>
</div>

