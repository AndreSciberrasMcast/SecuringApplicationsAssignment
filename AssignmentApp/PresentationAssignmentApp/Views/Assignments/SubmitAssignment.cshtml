@using SecuringApplicationsAssignment.Application.ViewModels
@model SecuringApplicationsAssignment.Application.ViewModels.SubmissionViewModel

@{
    ViewData["Title"] = "SubmitAssignment";
}

<div class="jumbotron jumbotron-fluid text-Center">
    <div class="container">
        <h1 class="display-4">Submit your assignment</h1>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4 border border-dark">
        <h2>@ViewBag.Assignment.Name</h2>
        <h4>@ViewBag.Assignment.Description</h4>
        <h4>@ViewBag.Assignment.Deadline</h4>
    </div>
    <div class="col-md-6 border border-dark">
        <form asp-action="SubmitAssignment" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="fileInput" class="control-label">Upload pdf</label>
                <input id="fileInput" name="file" class="form-control-file" type="file" />
                <span name="file" class="text-danger"></span>
                <!-- Asp for file-->
               <input asp-for="Assignment" value="@ViewBag.Assignment" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



