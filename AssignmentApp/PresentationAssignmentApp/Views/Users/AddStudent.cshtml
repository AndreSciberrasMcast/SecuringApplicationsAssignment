@model AddStudentModel

@{
    ViewData["Title"] = "AddStudent";
}

<div class="jumbotron jumbotron-fluid text-Center">
    <div class="container">
        <h1 class="display-4">Add a Student</h1>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddStudent">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MemberModel.Email" class="control-label"></label>
                <input asp-for="MemberModel.Email" class="form-control" />
                <span asp-validation-for="MemberModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberModel.FirstName" class="control-label">First Name</label>
                <input asp-for="MemberModel.FirstName" class="form-control" />
                <span asp-validation-for="MemberModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberModel.LastName" class="control-label">Last Name</label>
                <input asp-for="MemberModel.LastName" class="form-control" />
                <span asp-validation-for="MemberModel.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


